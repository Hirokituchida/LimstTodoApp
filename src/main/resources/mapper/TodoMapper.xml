<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- Mapperとxmlのマッピング -->
<mapper namespace="com.example.repository.TodoMapper">

	<select id="findMany" resultType="com.example.domain.model.Todo">
		select
		*
		from
		todo_details
		where
		is_done = FALSE
	</select>
	<select id="getTrueTodos" resultType="com.example.domain.model.Todo">
		select
		*
		from
		todo_details
		where
		is_done = TRUE
	</select>

</mapper>
